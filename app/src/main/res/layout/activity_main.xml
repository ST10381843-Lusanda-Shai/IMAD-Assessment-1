<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/appTitle"
        android:layout_width="372dp"
        android:layout_height="70dp"
        android:layout_marginTop="48dp"
        android:gravity="center"
        android:text="Your Meal App"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/timeDisplay"
        android:layout_width="432dp"
        android:layout_height="100dp"
        android:layout_marginTop="160dp"
        android:ems="10"
        android:hint="Enter the time of day(Morning, Afternoon, Evening, Night, Midnight)"
        android:inputType="text"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mealDisplay"
        android:layout_width="424dp"
        android:layout_height="200dp"
        android:layout_marginBottom="244dp"
        android:hint=""
        android:text=""
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/suggestMealBtn"
        android:layout_width="246dp"
        android:layout_height="72dp"
        android:layout_marginTop="56dp"
        android:text="Suggest Meal"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timeDisplay" />

    <Button
        android:id="@+id/resetBtn"
        android:layout_width="246dp"
        android:layout_height="72dp"
        android:layout_marginBottom="114dp"
        android:text="Reset"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>